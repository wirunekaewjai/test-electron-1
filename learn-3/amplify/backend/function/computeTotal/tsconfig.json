{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./src",
    "baseUrl": "./",
    "rootDir": "./lib",
    "paths": {
      "src": ["./lib"]
    }
  },
  "include": [
    "lib/**/*.ts"
  ]
}